<Application
    x:Class="Tampleworks.WindowsApplicationBlock.Demo.UwpApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tampleworks.WindowsApplicationBlock.Demo.UwpApp"
    xmlns:Converters="using:Tampleworks.WindowsApplicationBlock.Demo.UwpApp.Converters"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <Converters:BooleanOppositeConverter x:Key="BooleanOppositeConverter"/>
            <Converters:TrueToCollapsedConverter x:Key="TrueToCollapsedConverter"/>
            <Converters:TrueToVisibleConverter x:Key="TrueToVisibleConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
